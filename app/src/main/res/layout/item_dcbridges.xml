<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/rv_border">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/iv_item_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        tools:src="@android:color/darker_gray"
        app:siRadius="6dp"
        app:siBorderWidth="3dp"
        app:siBorderColor="@android:color/holo_green_dark"
        app:siSquare="true"/>

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/iv_item_picture"
        android:text="@string/dc_bridges_item"
        android:layout_marginBottom="6dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        tools:ignore="RtlCompat"
        android:layout_toEndOf="@id/iv_item_picture" />

    <TextView
        android:id="@+id/tv_item_detail"
        style="@style/TextViewDetail"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/iv_item_picture"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/detail_dc_bridges_item"
        tools:ignore="RtlCompat"
        android:layout_toEndOf="@id/iv_item_picture" />

</RelativeLayout>