            <TextView
                android:id="@+id/tv_R3_not_balanced"
                style="@style/TextViewDetail"
                android:layout_width="40dp"
                android:text="R3 :" />

            <EditText
                android:id="@+id/edt_R3_not_balanced_kelvin"
                style="@style/TextViewDetail"
                android:layout_weight="2"
                android:autofillHints="Input Nilai Resistansi 3"
                android:inputType="numberDecimal"
                android:lines="1"
                android:outlineAmbientShadowColor="@android:color/white"
                android:outlineSpotShadowColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <TextView
                style="@style/TextViewDetail"
                android:text=" Ω " />

        </TableRow>

        <TableRow
            style="@style/BackgroundLayout">

            <TextView
                android:id="@+id/tv_R4_not_balanced"
                style="@style/TextViewDetail"
                android:layout_width="40dp"
                android:text="R4 :" />

            <EditText
                android:id="@+id/edt_R4_not_balanced_kelvin"
                style="@style/TextViewDetail"
                android:layout_weight="2"
                android:autofillHints="Input Nilai Resistansi 4"
