        </TableRow>

        <TableRow
            style="@style/BackgroundLayout">

            <TextView
                android:id="@+id/tv_a_not_balanced"
                style="@style/TextViewDetail"
                android:layout_width="40dp"
                android:text="a :" />

            <EditText
                android:id="@+id/edt_a_not_balanced_kelvin"
                style="@style/TextViewDetail"
                android:layout_weight="2"
                android:autofillHints="Input Nilai Resistansi 4"
                android:inputType="numberDecimal"
                android:lines="1"
                android:outlineAmbientShadowColor="@android:color/white"
                android:outlineSpotShadowColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <TextView
                style="@style/TextViewDetail"
                android:text=" Ω " />

        </TableRow>

        <TableRow
            style="@style/BackgroundLayout">

            <TextView
                android:id="@+id/tv_b_not_balanced"
                style="@style/TextViewDetail"
                android:layout_width="40dp"
                android:text="b :" />

            <EditText
                android:id="@+id/edt_b_not_balanced_kelvin"
                style="@style/TextViewDetail"
                android:layout_weight="2"
                android:autofillHints="Input Nilai Resistansi 4"
                android:inputType="numberDecimal"
                android:lines="1"
                android:outlineAmbientShadowColor="@android:color/white"
                android:outlineSpotShadowColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <TextView
                style="@style/TextViewDetail"
                android:text=" Ω " />

        </TableRow>

        <TableRow
            style="@style/BackgroundLayout">

            <TextView
                android:id="@+id/tv_Ry_not_balanced"
                style="@style/TextViewDetail"
                android:layout_width="40dp"
                android:text="Ry :" />

            <EditText
                android:id="@+id/edt_Ry_not_balanced_kelvin"
                style="@style/TextViewDetail"
                android:layout_weight="2"
                android:autofillHints="Input Nilai Resistansi 4"
                android:inputType="numberDecimal"
                android:lines="1"
                android:outlineAmbientShadowColor="@android:color/white"
                android:outlineSpotShadowColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <TextView
                style="@style/TextViewDetail"
                android:text=" Ω " />

        </TableRow>

    </TableLayout>

    <TableLayout
        style="@style/BackgroundLayout">

        <TableRow
            style="@style/BackgroundLayout">

            <TextView
                android:id="@+id/tv_Ekl_value"
                style="@style/TextViewDetail"
                android:layout_width="80dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:text="Nilai Ekl :" />

            <TextView
                android:id="@+id/tv_Ekl_result"
                style="@style/TextViewDetail"
                android:layout_weight="2"
                android:textStyle="bold"
                android:text=" " />

            <TextView
                style="@style/TextViewDetail"
                android:text=" V " />

        </TableRow>

        <TableRow
            style="@style/BackgroundLayout">

            <TextView
                android:id="@+id/tv_I_value"
                style="@style/TextViewDetail"
                android:layout_width="80dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
